<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutItemQuestions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC8ABD"
    android:scaleX="0.75"
    android:scaleY="0.75">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/bigMargin">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#757575">

                <TextView
                    android:id="@+id/lblQuestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/bigMargin"
                    android:layout_marginTop="@dimen/bigMargin"
                    android:layout_marginEnd="@dimen/bigMargin"
                    android:text="Question #"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblQuestionNumber" />

                <TextView
                    android:id="@+id/lblQuestionNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/bigMargin"
                    android:layout_marginTop="@dimen/bigMargin"
                    android:layout_marginEnd="@dimen/bigMargin"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <SeekBar
                    android:id="@+id/seekBar"
                    style="@style/CustomSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:max="10"
                    android:orientation="vertical"
                    android:progress="5"
                    android:rotation="270"
                    android:scaleX="1.3"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblQuestion"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/lblScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintBottom_toBottomOf="@+id/seekBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.38"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblQuestion"
                    app:layout_constraintVertical_bias="0.498" />

                <TextView
                    android:id="@+id/lblScale2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginBetweenNumbers"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale"
                    app:layout_constraintStart_toStartOf="@+id/lblScale"
                    app:layout_constraintTop_toBottomOf="@+id/lblScale" />

                <TextView
                    android:id="@+id/lblScale3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginBetweenNumbers"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale2"
                    app:layout_constraintStart_toStartOf="@+id/lblScale2"
                    app:layout_constraintTop_toBottomOf="@+id/lblScale2" />

                <TextView
                    android:id="@+id/lblScale4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginBetweenNumbers"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale3"
                    app:layout_constraintStart_toStartOf="@+id/lblScale3"
                    app:layout_constraintTop_toBottomOf="@+id/lblScale3" />

                <TextView
                    android:id="@+id/lblScale5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginBetweenNumbers"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/lblScale3"
                    app:layout_constraintTop_toBottomOf="@+id/lblScale4" />

                <TextView
                    android:id="@+id/lblScale6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginBetweenNumbers"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale3"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/lblScale3"
                    app:layout_constraintTop_toBottomOf="@+id/lblScale5" />

                <TextView
                    android:id="@+id/lblScale7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginBetweenNumbers"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintBottom_toTopOf="@+id/lblScale"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/lblScale3" />

                <TextView
                    android:id="@+id/lblScale8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginBetweenNumbers"
                    android:text="7"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintBottom_toTopOf="@+id/lblScale7"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/lblScale3" />

                <TextView
                    android:id="@+id/lblScale9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginBetweenNumbers"
                    android:text="8"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintBottom_toTopOf="@+id/lblScale8"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/lblScale3" />

                <TextView
                    android:id="@+id/lblScale10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginBetweenNumbers"
                    android:text="9"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintBottom_toTopOf="@+id/lblScale9"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/lblScale3" />

                <TextView
                    android:id="@+id/lblScale11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginBetweenNumbers"
                    android:text="10"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="#3949AB"
                    app:layout_constraintBottom_toTopOf="@+id/lblScale10"
                    app:layout_constraintEnd_toEndOf="@+id/lblScale3" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>